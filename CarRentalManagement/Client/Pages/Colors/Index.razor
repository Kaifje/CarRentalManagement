@page "/colors/"
@inject HttpClient _client
@inject IJSRuntime js
@attribute [Authorize]

<h3 class="card-title">Farger</h3>
<hr />
<br />

<a href="/colors/create" class="btn btn-secondary">
    <span class="badge-pill pi-plus"></span>
    Sett inn ny farge
</a>
<hr />
<br />

@if (Colors == null)
{
    <div class="alert alert-info">Laster farger ...</div>
}
else
{
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Navn</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var color in Colors)
            {
                <tr>
                    <td>@color.Name</td>
                    <td>
                        <a href="/makes/view/@color.Id" class="btn btn-primary">
                            <span class="oi oi-book"></span>
                        </a>
                        <a href="/makes/edit/@color.Id" class="btn btn-warning">
                            <span class="oi oi-pencil"></span>
                        </a>
                        <button class="btn btn-danger" @onclick="@(() => Delete(color.Id))">
                            <span class="oi oi-delete"></span>
                        </button>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@code {
    private List<Color> Colors;

    protected async override Task OnInitializedAsync()
    {
        Colors = await _client.GetFromJsonAsync<List<Color>>($"{Endpoints.ColorsEndpoint}");
    }

    private async Task Delete(int colorid)
    {
        var color = Colors.First(x => x.Id == colorid);
        var confirm = await js.InvokeAsync<bool>("confirm", $"Vil du slette {color.Name}?");
        if (confirm)
        {
            await _client.DeleteAsync($"{Endpoints.ColorsEndpoint}/{colorid}");
            await OnInitializedAsync();
        }
    }
}
