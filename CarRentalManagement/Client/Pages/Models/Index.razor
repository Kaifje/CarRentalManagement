@page "/models/"
@inject HttpClient _client
@inject IJSRuntime js
@attribute [Authorize]

<h3 class="card-title">Merker</h3>
<hr />
<br />

<a href="/models/create" class="btn btn-secondary">
    <span class="badge-pill pi-plus"></span>
    Sett inn ny modell
</a>
<hr />
<br />


@if (Models == null)
{
    <div class="alert alert-info">Laster modeller ...</div>
}
else
{
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Navn</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var modelitem in Models)
            {
                <tr>
                    <td>@modelitem.Name</td>
                    <td>
                        <a href="/modelitems/view/@modelitem.Id" class="btn btn-primary">
                            <span class="oi oi-book"></span>
                        </a>
                        <a href="/modelitems/edit/@modelitem.Id" class="btn btn-warning">
                            <span class="oi oi-pencil"></span>
                        </a>
                        <button class="btn btn-danger" @onclick="@(() => Delete(modelitem.Id))">
                            <span class="oi oi-delete"></span>
                        </button>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@code {
    private List<Model> Models;

    protected async override Task OnInitializedAsync()
    {
        Models = await _client.GetFromJsonAsync<List<Model>>($"{Endpoints.ModelsEndpoint}");
    }

    private async Task Delete(int id)
    {
        var model = Models.First(x => x.Id == id);
        var confirm = await js.InvokeAsync<bool>("confirm", $"Vil du slette {model.Name}?");
        if (confirm)
        {
            await _client.DeleteAsync($"{Endpoints.ModelsEndpoint}/{id}");
            await OnInitializedAsync();
        }

    }
}
